{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 725,
  "height": 500,
  "title": "Confirmed Cases vs Number of Deaths Per Country",
  "data": {
    "url": "https://raw.githubusercontent.com/kaishengmar/FIT3179-A2/main/data/covid_data_filtered.csv"
  },
  "params": [
    {
      "name": "Confirmed_Cases",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1000000,
        "step": 1000,
        "name": "Confirmed Cases: "
      }
    },
    {
      "name": "Death_Cases",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1000000,
        "step": 1000,
        "name": "Total Death Cases: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Confirmed > Confirmed_Cases"},
    {"filter": "datum.Deaths > Death_Cases"}
  ],
  "encoding": {
    "x": {
      "field": "Confirmed",
      "type": "quantitative",
      "title": "Confirmed Cases",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1, 10000000000]}
    },
    "y": {
      "field": "Deaths",
      "type": "quantitative",
      "title": "Number of Deaths",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 10000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "region_layer": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Confirmed",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000, 10000, 100000, 1000000, 10000000],
            "range": [10, 50, 150, 250, 350, 600]
          },
          "legend": {"format": ".1s"},
          "title": "Total Cases"
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Africa",
              "Asia",
              "Europe",
              "Oceania"
            ],
            "range": [
              "#d55e00",
              "#cc79a7",
              "#0072b2",
              "#009292",
              "#b66dff",
              "#b6dbff"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "region_layer", "value": 0.75},
          "value": 1
        },
        "tooltip": [
          {"field": "Country", "title": "Country Name", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {
            "field": "Confirmed",
            "title": "Total Cases",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Deaths",
            "title": "Total Deaths",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {}
}
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 850,
  "height": 450,
  "title": "Total COVID-19 Cases In All Countries (10/10/2022)",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/kaishengmar/FIT3179-A2/main/data/ne_110_m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "Population_Num",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 10000000,
        "name": "Total Population:"
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/kaishengmar/FIT3179-A2/main/data/covid_data_filtered.csv"
        },
        "key": "Country",
        "fields": ["Population", "Confirmed", "Cases_per_million"]
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Cases_per_million",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [1, 100000],
            "range": ["#FFE6F7", "#937DC2"]
          },
          "title": "Cases(Million)"
        },
        "opacity": {
          "condition": {
            "test": "datum.Population > Population_Num ",
            "value": 1
          },
          "value": 0.15
        },
        "tooltip": [
          {"field": "properties.NAME", "title": "Country", "type": "nominal"},
          {
            "field": "Population",
            "title": "Population",
            "type": "quantitative"
          },
          {
            "field": "Confirmed",
            "title": "Confirmed Cases",
            "type": "quantitative"
          },
          {
            "field": "Cases_per_million",
            "title": "Cases per Million",
            "type": "quantitative"
          }
        ]
      }
    }
  ],
  "config": {}
}
